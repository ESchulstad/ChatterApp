@model ChatterApp.Models.Chat

@{
    ViewBag.Title = "Delete";
}

<h2 class="heading">Delete</h2>

<h3 class="subheading">Are you sure you want to delete this?</h3>
<div>

    <hr />
    <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2 chat">


            <span class="email"> @Html.DisplayFor(model => model.ApplicationUser.Email)</span> <br />



            @Html.DisplayFor(model => model.Content)

        </div>
    </div>
    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            @Html.ActionLink("Back to Chats", "Index")
        </div>
    }

</div>

